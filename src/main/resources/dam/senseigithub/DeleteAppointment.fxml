<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dam.senseigithub.controller.appointments.DeleteAppointmentController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <ComboBox fx:id="clientComboBox" prefWidth="150.0" promptText="Seleccionar cliente" />
        <ComboBox fx:id="dateComboBox" onAction="#loadDates" prefWidth="150.0" promptText="Seleccionar fecha" />
        <Button onAction="#deleteAppointment" text="Eliminar cita" translateY="30.0" />
    </children>
</VBox>
